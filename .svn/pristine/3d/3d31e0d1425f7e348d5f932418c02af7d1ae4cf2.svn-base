<div ng-controller="EventSearchCtrl as sCtrl">
	<div class="row border-bottom" style="margin: 10px;">
		<nav class="navbar navbar-static-top" role="navigation"
			style="margin-bottom: 0">

			<div class="navbar-left">
				<!-- 
				<div class="btn-group">
					<input type="hidden" name="mfcw_filter_event"
						id="mfcw_filter_event" />
					<button id="mfcw_filter_event_label" type="button"
						class="btn btn-primary" style="width: 200px;" >-- Select
						Event --</button>
					<button type="button" class="btn btn-primary dropdown-toggle"
						data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<span class="caret"></span> <span class="sr-only">Toggle


<!-- Wrapper-->
<div id="wrapper" ng-controller="ToolViewEventCtrl as vCtrl">

	<!-- Navigation -->
	<div ng-include="'views/common/navigation.html'"></div>

	<!-- Page wraper -->
	<!-- ng-class with current state name give you the ability to extended customization your view -->
	<div id="page-wrapper" class="gray-bg {{$state.current.name}}">

		<!-- Page wrapper -->
		<div ng-include="'views/common/topnavbar.html'"></div>

		<!-- Main view  -->
		<div class="row wrapper border-bottom white-bg page-heading">
			<div class="col-lg-10">

				<ol class="breadcrumb" style="padding-top: 5px;">
					<li><a href="index.html">Home</a></li>
					<li class="active"><strong>Tool View Event</strong></li>
				</ol>
			</div>
			<div class="col-lg-2"></div>
		</div>

		<div class="wrapper wrapper-content animated fadeInRight">

			<div ng-include src="'views/widget/event_search.html'"></div>

			<div class="row">
				<div class="col-lg-6">
					<div class="ibox float-e-margins">
						<div class="ibox-title">
							<h5>Summary of View Event</h5>
							<br />
						</div>
						<div class="ibox-content" style="min-height:400px;">
							<div class="animated fadeInDown" ng-show="!vCtrl.viewCountShow"
								no-data-graph></div>
							<canvas id="pie" class="chart chart-pie" ng-show="vCtrl.viewCountShow"
								chart-data="vCtrl.viewData.count"
								chart-labels="vCtrl.viewData.name" chart-legend="true"> 
									</canvas>
						</div>

					</div>
				</div>

				<div class="col-lg-6">
					<div class="ibox float-e-margins">
						<div class="ibox-title">
							<h5 class>Total & Average activity in Views</h5>
						</div>
						<div class="ibox-content" style="min-height:400px;">
							<div class="animated fadeInDown" ng-show="!vCtrl.viewActivityShow"
								no-data-graph></div>
							<canvas id="bar" class="chart chart-bar" ng-show="vCtrl.viewActivityShow"
								chart-options ="vCtrl.viewActivityOpt"
								chart-data="vCtrl.viewGraphData.data"
								chart-labels="vCtrl.viewGraphData.name"
								chart-series="vCtrl.viewGraphData.series"></canvas>
							<!-- chart-colours='[{fillColor:["#FF0000", "#00FF00"]}]' -->
						</div>
					</div>
				</div>

			</div>
			<div class="row"></div>

		</div>

		<!-- Footer -->
		<div ng-include="'views/common/footer.html'"></div>

	</div>
	<!-- End page wrapper-->

</div>
<!-- End wrapper-->
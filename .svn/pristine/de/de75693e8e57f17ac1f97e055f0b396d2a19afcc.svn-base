/**
 * 
 */

function ToolViewEventCtrl(conf, apiUrl, apiService, $scope, $http,
		$localStorage, $modal, $compile) {

	var _this = this;
	
	this.graphData = [{ "name" : "Model", "data": [75,28], "labels" : ["Total", "Average"]},
	                  { "name" : "Home", "data": [102,38], "labels" : ["Total", "Average"]},
	                  { "name" : "XML Schema", "data": [258,75], "labels" : ["Total", "Average"]}]

	/**
	 * Pie chart
	 */
	
	$scope.$on('populateSearchResults', function(event, args) {

		$localStorage.searchFilterArgs = args;
		_this.getViewCount(args);
	});

	
	this.getViewCount = function(args) {
		apiService.getWithParams(apiUrl.GET_VIEW_COUNT, args,
				function(data, status) {
					_this.viewData = data;
				});
	}
	
	this.getViewCount('');
	
}

/**
 * 
 * Pass all functions into module
 */

angular.module('cie').controller('ToolViewEventCtrl', ToolViewEventCtrl);
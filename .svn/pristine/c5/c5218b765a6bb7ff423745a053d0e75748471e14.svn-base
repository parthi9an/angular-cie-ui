<div ng-controller="EventSearchCtrl as sCtrl">
	<div class="row border-bottom" style="margin: 10px;">
		<form role="form" class="form-inline">
			<div class="form-group">
				<div class="input-group">
					<select style='width: 150px'
						class="form-control
					m-b" ng-model="sCtrl.selected.source"
						ng-options="e as e for e in sCtrl.eventSourceList track by e"
						ng-change="sCtrl.hasSourceChanged()">
						<option value="">All Source</option>
					</select> <select style='width: 150px'
						class=" form-control
					m-b" ng-model="sCtrl.selected.domainId"
						ng-options="e as e for e in sCtrl.eventDomainList track by e"
						ng-change="sCtrl.hasDomainChanged()">
						<option value="">All Domain</option>
					</select> <select style='width: 150px'
						class=" form-control
					m-b" ng-model="sCtrl.selected.serverId"
						ng-options="e for e in sCtrl.eventServerList track by e"
						ng-change="sCtrl.hasServerChanged()">
						<option value="">All Server</option>
					</select> <select style='width: 150px'
						class="session form-control
					m-b" ng-model="sCtrl.selected.sessionId"
						ng-options="e for e in sCtrl.eventSessionList track by e"
						ng-change="sCtrl.hasSessionChanged()">
						<option value="">All Session</option>
					</select>
				</div>
				<div class="input-group date">
					<input style='width: 150px' type="datetime" class="form-control" date-time
						ng-model="sCtrl.fromDate" view="date" auto-close="true"
						placeholder="From Date"> <span class="input-group-addon"><i
						class="fa fa-calendar"></i></span>
				</div>
				<div class="input-group date">
					<input style='width: 150px' type="datetime" class="form-control" date-time
						ng-model="sCtrl.toDate" view="date" auto-close="true"
						placeholder="To Date"> <span class="input-group-addon"><i
						class="fa fa-calendar"></i></span>
				</div>
				<div class="form-group" style="width: 35px; padding-left: 60px;"
					ng-click="sCtrl.eventSearch()">
					<div class="input-group-btn">
						<button class="btn btn-primary" type="submit">
							<i class="fa fa-search"></i>
						</button>
					</div>
				</div>
			</div>
	</div>


	</form>

</div>

</div>
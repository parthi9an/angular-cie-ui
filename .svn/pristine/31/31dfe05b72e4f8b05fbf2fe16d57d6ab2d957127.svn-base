 
angular.module('cie') 

.controller('LoginController',    ['$scope', '$rootScope', '$location', '$localStorage', 'AuthenticationService',
    function ($scope, $rootScope, $location, $localStorage, AuthenticationService) {
        // reset login status
       // AuthenticationService.ClearCredentials();
 
        $scope.login = function () {
            $scope.dataLoading = true;
            AuthenticationService.Login($scope.username, $scope.password, function(response) {
                if(response.success) {
                    AuthenticationService.SetCredentials($scope.username, response['Access-Token']);
                    $location.path('/');
                } else {
                    $scope.error = response.message;
                    $scope.dataLoading = false;
                }
            });
        };
        
        $scope.logout = function () {
        	
            AuthenticationService.ClearCredentials();
            $localStorage.$reset();
            $location.path('/login');
            
        };
        
        $scope.$on('unAuthorized', function(event) {
            $scope.logout();
            $scope.error = "401 Unauthorized Access!";
        })
        	
    }]);
/**
 * Tool Window Scroll Event controller
 */

function ToolWindowScrollEventCtrl(conf, apiUrl, apiService, $scope, $http,
		$localStorage, $modal, $compile) {

	var _this = this;

	this.showWndGraph = true;

	this.init = function() {

		var args = ($localStorage.searchFilterArgs != undefined) ? $localStorage.searchFilterArgs
				: {};
		_this.getCountOfScrollWindow(args);
	}

	$scope.$on('populateSearch', function(event, args) {

		$localStorage.searchFilterArgs = args;
		_this.getCountOfScrollWindow(args);
	});

	/*
	 * count of scroll in a view 
	 * Pie chart
	 */

	this.getCountOfScrollWindow = function(args) {
		apiService.getWithParams(apiUrl.GET_COUNT_OF_SCROLL_WINDOW, args,
				function(data, status) {
					if (data.name.length == 0) {
						_this.showWndGraph = false;
					} else {
						_this.showWndGraph = true;
					}
					_this.windowScrollData = data;
				});
	}

	this.init();

}

/**
 * 
 * Pass all functions into module
 */

angular.module('cie').controller('ToolWindowScrollEventCtrl', ToolWindowScrollEventCtrl);